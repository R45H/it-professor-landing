include ../mixins/num
include ../mixins/list
include ../mixins/partner
include ../mixins/slider
include ../mixins/resource
include ../mixins/project

.mb-30

.container
	.row
		.col-sm-4.mb-30
			a.link(href='#') .link

		.col-sm-4.mb-30.main__black
			a.link.link_color_white(href='#') .link.link_color_white

	.row
		.col-sm-4.mb-30
			.title .title

		.col-sm-4.mb-30
			.title.title_upper .title.title_upper

		.col-sm-4.mb-30.main__black
			.title.title_color_white .title.title_color_white

	.row
		.col-sm-4.mb-30
			.btn .btn

		.col-sm-4.mb-30
			a.btn(href='#') a.btn

		.col-sm-4.mb-30
			input.btn(type='button' value='input.btn')

		.col-sm-4.mb-30
			button.btn button.btn

		.col-sm-4.mb-30
			.btn.btn_wide .btn.btn_wide

		.col-sm-4.mb-30
			.btn.btn_size_lg .btn.btn_size_lg

		.col-sm-4.mb-30
			.btn
				span .btn (with icon)
				img(src='img/icons/envelope.jpg')

		.col-sm-6.mb-30
			.btn.btn_size_lg
				span .btn.btn_size_lg (with icon)
				img(src='img/icons/envelope.jpg')

.mb-30
	.banner(style='background-image: url(img/content/banner.jpg)')

.container
	.row
		.col-sm-4.mb-30
			+num(num[0])

	.row
		.col-sm-6.mb-30
			+list(list[0])

		.col-sm-6.mb-30
			+list(list_2[0])

	.row
		.col-sm-4.mb-30
			+partner(partner[0])

	.row
		.col-sm-4.mb-30
			+project(project[5])

	.mb-30
		+slider(dataCols='variable')

			each val in partner
				.slider__item
					+partner(val)

	.mb-30
		+slider(dataMdCols=2 dataXlCols=3)

			each val in project
				.slider__item
					+project(val)

	.row
		.col-sm-6.mb-30
			+resource(resource[0])